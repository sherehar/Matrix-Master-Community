<form action="<%= paction %>" method="POST" class="edit">
    <div class="mb-3">
        <label for="question" class="form-label">Question</label>
        <input name="question" type="text" class="form-control" id="question" aria-describedby="Enter The question" value="<%= aQuestion %>">
        <% if(errors && errors.question){ %>
            <div class="cantainer"><span class="warning"><%= errors.question %></span></div>
        <% } %>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" class="form-control" id="description" rows="5"><%= aDescription %></textarea>
        <% if(errors && errors.description){ %>
            <div class="cantainer"><span class="warning"><%= errors.description %></span></div>
        <% } %>
    </div>
    <input type="submit" class="btn btn-light" value="Submit">
</form>
